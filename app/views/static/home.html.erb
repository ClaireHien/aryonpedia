<% bestiary = Bestiary.last %>
<div class="article">

<a href="/bestiary/<%= bestiary.id%>">
  <img src="<%= bestiary.image%>" alt="image de la créature"></a><br />

  <div class="art_title"><%= bestiary.name %></div>

  <div class="art_content">
  <span class="badge" style="background-color: <%= bestiary.level.color %>;">
  <a href="/bestiary/level/<%= bestiary.level.name %>"><%= bestiary.level.name %></a></span> 
  <span class="badge" style="background-color: <%= bestiary.rarity_bestiary.color %>;">
  <a href="/bestiary/rarity/<%= bestiary.rarity_bestiary.name %>"><%= bestiary.rarity_bestiary.name %></a></span>
  <span class="badge" style="background-color: <%= bestiary.habitat_bestiary.color %>;">
  <a href="/bestiary/habitat/<%= bestiary.habitat_bestiary.name %>"><%= bestiary.habitat_bestiary.name %></a></span>
  </div>

  <a href="/bestiary/<%= bestiary.id %>"><div class="art_foot">
    En savoir plus
  </div></a>

</div>

<% herbarium = Herbarium.last %>
<div class="article">

  <a href="/herbarium/<%= herbarium.id%>">
  <img src="<%= herbarium.image%>" alt="image de la plante"></a><br />

  <div class="art_title"><%= herbarium.name %></div>

  <div class="art_content">
  <span class="badge" style="background-color: <%= herbarium.category.color %>;" >
  <a href="/herbarium/category/<%= herbarium.category.name %>"><%= herbarium.category.name %></a></span>
  <span class="badge" style="background-color: <%= herbarium.rarity_herbarium.color %>;" >
  <a href="/herbarium/rarity/<%= herbarium.rarity_herbarium.name %>"><%= herbarium.rarity_herbarium.name %></a></span>
  <span class="badge" style="background-color: <%= herbarium.season.color %>;">
  <a href="/herbarium/season/<%= herbarium.season.name %>"><%= herbarium.season.name %></a></span>
  <span class="badge" style="background-color: <%= herbarium.habitat_herbarium.color %>;" >
  <a href="/herbarium/habitat/<%= herbarium.habitat_herbarium.name %>"><%= herbarium.habitat_herbarium.name %></a></span>
  </div>

  <a href="/herbarium/<%= herbarium.id %>"><div class="art_foot">
    En savoir plys
  </div></a>

</div>


</div>

