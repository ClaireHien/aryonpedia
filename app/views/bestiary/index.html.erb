
<div class="left">
<div class="titleleft">Bestiaire</div>
<a href="<%= new_bestiary_path%>" class="navleft">Ajouter une créature</a>
<a href="/bestiary" class="navleft">Voir toutes les créatures</a>

<div class="index_list">

    <strong>Dangerosité : </strong><br />
    <% all_level = Level.all%>
    <% all_level.each do |lv| %>
      <span style="background-color: <%= lv.color %>;" class="badge">
        <a href="/bestiary/level/<%= lv.name%>"><%= lv.name %></a></span>
    <%end%>

    <br /><br />
    <strong>Rareté : </strong><br />
    <% all_rarity = RarityBestiary.all%>
      <% all_rarity.each do |r| %>
        <span style="background-color: <%= r.color %>;" class="badge">
        <a href="/bestiary/rarity/<%= r.name%>"><%= r.name %></a></span>
      <%end%>

    <br /><br />
    <strong>Habitat : </strong><br />

    <% all_habitat = HabitatBestiary.all%>
      <% all_habitat.each do |h| %>
        <span style="background-color: <%= h.color %>;" class="badge">
        <a href="/bestiary/habitat/<%= h.name%>"><%= h.name %></a></span> 
      <%end%>

  </div>
</div>



<h1>Bestiary index</h1>

<br /><br />
<h2>Toutes les créatures du bestiaire</h2>
<br />  
<% all_bestiary = Bestiary.all %>

<div class="d-flex justify-content-around flex-wrap">

<% all_bestiary.each do |bestiary| %>

  <div class="article card d-flex flex-column justify-content-between">
    <div><a href="/bestiary/<%= bestiary.id%>">
    <img src="<%= bestiary.image%>" alt="image de la créature"></a><br />
  
    <div class="art_title"><%= bestiary.name %></div>
    </div>
  
    <div class="art_content">
    <span style="background-color: <%= bestiary.level.color %>;" class="badge">
    <a href="/bestiary/level/<%= bestiary.level.name %>"><%= bestiary.level.name %></a></span>
    <span style="background-color: <%= bestiary.rarity_bestiary.color %>;" class="badge">
    <a href="/bestiary/rarity/<%= bestiary.rarity_bestiary.name %>"><%= bestiary.rarity_bestiary.name %></a></span>
    <span style="background-color: <%= bestiary.habitat_bestiary.color %>;" class="badge">
    <a href="/bestiary/habitat/<%= bestiary.habitat_bestiary.name %>"><%= bestiary.habitat_bestiary.name %></a></span>
    </div>
  
    <a href="/bestiary/<%= bestiary.id %>"><div class="art_foot">
      En savoir plus
    </div></a>
  
  </div>

<% end %>
</div>
