
<div class="left">
<div class="titleleft">Herbier</div>
<a href="<%= new_herbarium_path%>" class="navleft">Ajouter une plante</a>
<a href="/herbarium" class="navleft">Voir toutes les plantes</a>

<div class="index_list">

  <strong>Catégorie : </strong><br />
  <% all_cat = Category.all%>
  <% all_cat.each do |c| %>

      <span style="background-color: <%= c.color %>;" class="badge"><a href="/herbarium/category/<%= c.name%>"><%= c.name %></a></span>
  <%end%>

  <br /><br />
  <strong>Saisons : </strong><br />
  <% all_season = Season.all%>
  <% all_season.each do |s| %>
      <span style="background-color: <%= s.color %>;" class="badge"><a href="/herbarium/season/<%= s.name%>"><%= s.name %></a></span> 
  <%end%>

  <br /><br />
  <strong>Rareté : </strong><br />
  <% all_rarity = RarityHerbarium.all%>
    <% all_rarity.each do |r| %>
      <span style="background-color: <%= r.color %>;" class="badge"><a href="/herbarium/rarity/<%= r.name%>"><%= r.name %></a></span>
    <%end%>

  <br /><br />
  <strong>Habitat : </strong><br />
  <% all_habitat = HabitatHerbarium.all%>
  <% all_habitat.each do |hh| %>
      <span style="background-color: <%= hh.color %>;" class="badge"><a href="/herbarium/habitat/<%= hh.name%>"><%= hh.name %></a></span>
  <%end%>


</div>

</div>







<% herbarium = Herbarium.find(params[:id]) %>

<div class="card" style="max-width: 760px;">

  <div class="art_title_show"><%= herbarium.name %></div>

  <div class="row no-gutters">
    <div>
      <img src="<%= herbarium.image %>" class="img_profile" alt="image de la plante">
    </div>
    
    <div class="col-md-8">

      <div class="art_bot text-muted">
        <% unless current_user %><%else%>
        <% if current_user.rank == "A.dmin0018"%>
          <a href="<%=edit_herbarium_path%>">editer</a> | 
        <%end%><%end%>
        Proposé par <a href="/user/<%= herbarium.user.id %>"><%= herbarium.user.pseudo %></a>
      </div>

      <div class="card-body">
        <p class="card-text">

        Catégorie : <font class="badge" style="background-color:<%= herbarium.category.color %>;"><%= herbarium.category.name %></font><br />
        Rareté : <font class="badge" style="background-color:<%= herbarium.rarity_herbarium.color %>;"><%= herbarium.rarity_herbarium.name %></font><br />
        Habitat : <font class="badge" style="background-color:<%= herbarium.habitat_herbarium.color %>;"><%= herbarium.habitat_herbarium.name %></font><br />
        <small><%= herbarium.location %></small><br />
        Saison : <font class="badge"><%= herbarium.season.name%></font><br />   
        Taille : <font class="badge"><%= herbarium.height %></font><br />        
        
        </p>
      </div>
    </div>
  </div>

  <div class="art_descrip">
    <%= herbarium.description %>
  </div>

</div>
<input type="checkbox" id="spoiler" /> 
<label for="spoiler">Voir l'image en plus grand</label>
<div class="spoiler">
<img class="big_image" src="<%= herbarium.image %>">
</div>
