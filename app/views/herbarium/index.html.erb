
<div class="left">
<div class="titleleft">Herbier</div>
<a href="<%= new_herbarium_path%>" class="navleft">Ajouter une plante</a>
<a href="/herbarium" class="navleft">Voir toutes les plantes</a>

<div class="index_list">

  <strong>Afficher les plantes par saisons : </strong><br />
  <% all_season = Season.all%>
  <% all_season.each do |s| %>
      <a href="herbarium/season/<%= s.name%>"><%= s.name %></a> - 
  <%end%>

  <br /><br />
  <strong>Afficher les plantes par rareté : </strong><br />
  <% all_rarity = RarityHerbarium.all%>
    <% all_rarity.each do |r| %>
      <a href="herbarium/rarity/<%= r.name%>"><%= r.name %></a> - 
    <%end%>

  <br /><br />
  <strong>Afficher les plantes par habitat : </strong><br />
  <% all_habitat = HabitatHerbarium.all%>
  <% all_habitat.each do |hh| %>
      <a href="herbarium/habitat/<%= hh.name%>"><%= hh.name %></a> - 
  <%end%>

  <br /><br />
  <strong>Afficher les plantes par catégorie : </strong><br />
  <% all_cat = Category.all%>
    <% all_cat.each do |c| %>
      <a href="herbarium/category/<%= c.name%>"><%= c.name %></a> - 
    <%end%>

</div>

</div>



<h1>Herbarium index</h1>
<h2>Toutes les plantes de l'herbier</h2>

<% all_herbarium = Herbarium.all %>
<% all_herbarium.each do |h| %>

    Nom : <%= h.name %> | Catégorie : <%= h.category.name %> <br />
    Habitat : <%= h.habitat_herbarium.name %> - <%= h.location %><br />
    Saison : <%= h.season.name %> | Rareté : <%= h.rarity_herbarium.name %>
    <br /><br />
    <img src="<%= h.image %>" class="img_index">
<br /><br />
Proposé par : <%= h.user.pseudo %>

<br /><br />
